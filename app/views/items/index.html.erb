<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <%= turbo_stream_from "items" %>
        <%= turbo_frame_tag 'items_count' do %>
          <%= render partial: 'count', locals: { total: @items.count } %>
        <% end %>
        
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Description
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @items.each do |i| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <%= i.name %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <%= i.desc %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="p-1.5 w-full sm:w-auto overflow-hidden bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-700">
                    <div class="space-y-2 sm:space-y-0 sm:flex sm:-mx-1">
                      <%= link_to 'Edit', edit_item_path(i), class: "w-full px-4 py-1 text-white bg-blue-600 rounded-md focus:outline-none sm:w-auto sm:mx-1 hover:bg-blue-500 focus:bg-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-40" %>
                      
                      <%= link_to 'Show', item_path(i), data: { "turbo-frame": "show_item" }, class: "w-full px-4 py-1 text-white bg-yellow-600 rounded-md focus:outline-none sm:w-auto sm:mx-1 hover:bg-yellow-500 focus:bg-yellow-500 focus:ring focus:ring-yellow-300 focus:ring-opacity-40" %>
                      
                      <%= link_to 'Destroy', item_path(i), data: { "turbo-method": :delete }, class: "w-full px-4 py-1 text-white bg-red-600 rounded-md focus:outline-none sm:w-auto sm:mx-1 hover:bg-red-500 focus:bg-red-500 focus:ring focus:ring-red-300 focus:ring-opacity-40" %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <divv class="min-w-full divide-y divide-gray-200">
          <turbo-frame id="show_item"></turbo-frame>
        </div>
      </div>
    </div>
  </div>
</div>